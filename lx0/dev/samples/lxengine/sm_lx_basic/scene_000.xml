    </Header>
    <Library>
        <Mesh id="unit_cube" src="data/sm_lx_basic/unit_cube.json" />
        <Mesh id="unit_sphere" src="data/sm_lx_basic/unit_sphere.json" />
        <Mesh id="small_sphere"  src="data/sm_lx_basic/small_sphere.json" />
        <SoundBuffer id="snd_background_music" type="ogg" src="data/sm_lx_basic/germanic_peace_3.ogg" />
