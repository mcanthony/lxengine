<Library>
  
  <!-- Common shaders -->
  <Material id="normal_shader">
    {
      graph : {
        _type : "normal",
      }
    }
  </Material>
  <Material id="normal2_shader">
    {
      graph : {
        _type : "normal2",
      }
    }
  </Material>

  <Material id="phong_checker">
    {
    graph : {
    _type : "phong",
    diffuse : {
    _type : "checker",
    color0 : [ .2, .1, .1 ],
    color1 : [ 1, 1, 1 ],
    uv : { _type : "cube", scale : [ 0.0142857143, 0.0142857143 ] },
    },
    specular : [ 1, 1, 1 ],
    specularEx : 96
    }
    }
  </Material>

  <Material id="white_spec96">
    {
    graph : {
    _type : "phong",
    diffuse : [ 1, 1, 1 ],
    specular : [ 1, 1, 1 ],
    specularEx : 96
    }
    }
  </Material>

  <!-- Primary colors -->
  <Material id="red">
    {
    graph : {
      _type : "phong",
      diffuse : [ 1, 0, 0],
      }
    }
  </Material>
  <Material id="green">
    {
    graph : {
    _type : "phong",
    diffuse : [ 0, 1, 0]
    }
    }
  </Material>
  <Material id="blue">
    {
    graph : {
    _type : "phong",
    diffuse : [ 0, 0, 1]
    }
    }
  </Material>
  <Material id="yellow">
    {
    graph : {
    _type : "phong",
    diffuse : [ 1, 1, 0],
    }
    }
  </Material>
  <Material id="cyan">
    {
    graph : {
    _type : "phong",
    diffuse : [ 0, 1, 1],
    }
    }
  </Material>
  <Material id="violet">
    {
    graph : {
    _type : "phong",
    diffuse : [ 1, 0, 1],
    }
    }
  </Material>


</Library>