{
    output : "vec3",
    input : {
        uv          : [ "vec2",     { _type : "spherical", scale : [ 12, 6 ] },  "uvMapper"       ],
        color0      : [ "vec3",     [1,1,1],            "primaryColor"   ],
        color1      : [ "vec3",     [0,0,0],            "secondaryColor" ],
        radius      : [ "float",    .45                                  ],
    },
    source : "
        vec2 t = abs(fract(uv)) - vec2(0.5, 0.5);
        if (dot(t, t) <= (radius * radius))
           return color0;
        else
           return color1;
    ",
}