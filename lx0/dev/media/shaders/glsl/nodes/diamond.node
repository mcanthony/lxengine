{
    output      : "vec3",
    input  : 
    {
        uv          : [ "vec2",     [0, 0],             "uvMapper"       ],
        color0      : [ "vec3",     [1,1,1],            "primaryColor"   ],
        color1      : [ "vec3",     [0,0,0],            "secondaryColor" ],
        radius      : [ "float",    .4                                   ],
    },
    source : "
        vec2 t = abs(fract(uv) - vec2(0.5, 0.5));
        if (t.x + t.y < radius)
           return color1;
        else
           return color0;
    ",
}