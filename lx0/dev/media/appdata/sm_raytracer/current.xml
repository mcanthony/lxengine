<Document>
    <Library>
      <IncludeDocument src="media2/appshared/materials/basic.xml" />
      <Camera id="camera">
        {
            position : [ 2.45, 1.15, 2.1 ],
            look_at  : [ 1.15, .95, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Group id="material_group">
        <Material id="mat1">
          {
          diffuse : [ 1, 1, 0]
          }
        </Material>
        <NormalMaterial id="mat2">
          {
          }
        </NormalMaterial>
        <LightGradientMaterial id="mat3">
          {
            texture : "media2/textures/gradients/1d/light_gradient-00.png"
          }
        </LightGradientMaterial>
        <LightGradientMaterial id="mat4">
          {
          texture : "media2/textures/gradients/1d/light_gradient-01.png"
          }
        </LightGradientMaterial>        
      </Group>
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 1, 3, 3 ],
            color    : [ 1, 1, 1 ]
          }
        </Light>
        <Light>
          {
          position : [ 3, 1, 1 ],
          color    : [ .2, .1, .1 ]
          }
        </Light>
      </Group>
        <Group id="plane_group">
          <Plane id="x_axis_plane" material="red">
            {
            normal : [ 1, 0, 0 ],
            d      : 0
            }
          </Plane>
          <Plane id="y_axis_plane" material="green">
            {
            normal : [ 0, 1, 0 ],
            d      : 0
            }
          </Plane>
          <Plane id="z_axis_plane" material="blue">
            {
            normal : [ 0, 0, 1 ],
            d      : 0
            }
          </Plane>
        </Group>
        <Group id="sphere_group">
          <Sphere material="mat1">
            {
              center : [ .5, .5, .5 ],
              radius : .5
            }
          </Sphere>
          <Sphere material="mat2">
            {
            center : [ .5, 1.5, .5 ],
            radius : .5
            }
          </Sphere>
          <Sphere material="mat3">
            {
            center : [ 1.5, .5, .5 ],
            radius : .5
            }
          </Sphere>
          <Sphere material="mat4">
            {
            center : [ 1.5, 1.5, .5 ],
            radius : .5
            }
          </Sphere>
        </Group>
    </Scene>
</Document>
