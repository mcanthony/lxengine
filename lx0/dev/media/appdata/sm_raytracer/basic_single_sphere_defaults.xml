<Document>
    <Library>
        <Camera id="camera">
        {
            position : [ 1, 1, 1 ],
            look_at  : [ .5, .5, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Material id="red">
      {
        color : [ 1, 0, 0]
      }
      </Material>
      <Material id="green">
        {
        color : [ 0, 1, 0]
        }
      </Material>
      <Material id="blue">
        {
        color : [ 0, 0, 1]
        }
      </Material>
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 3, 2, 3 ],
            color    : [ 1, .9, .9 ]
          }
        </Light>
        <Light>
          {
          position : [ .1, 2, .1 ],
          color    : [ 0, 0, .5 ]
          }
        </Light>
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane" material="red">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane" material="green">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane" material="blue">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="sphere_group">
            <Sphere>
            {
                center : [ .5, .5, .5 ],
                radius : .5
            }
            </Sphere>
        </Group>
    </Scene>
</Document>
