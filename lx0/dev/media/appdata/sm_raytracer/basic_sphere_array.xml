<Document>
    <Library>
        <Camera id="camera">
        {
            position : [ 6, 6, 6 ],
            look_at  : [ 5, 5, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 3, 2, 3 ],
            color    : [ 1, 1, 1 ]
          }
        </Light>
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="sphere_group">
        </Group>
      
      <Script language="javascript" src="media2/scripts/base/lxquery-0.0.0.js" />
      <Script>
        <!--
        var group = $("#sphere_group");
        for (var y = .5; y < 10; y += 1)
        {
          for (var x = .5; x < 10; x += 1)
          {
            var e = $("<Sphere/>");
            e.value( { center : [ x, y, .5], radius : .5 } );
            group.append(e);
          }
        }
        -->
      </Script>
    </Scene>
</Document>
