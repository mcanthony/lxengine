<Document>
    <Library>
      <IncludeDocument src="media2/appshared/materials/basic.xml" />  
      <Camera id="camera">
        {
            position : [ 9, 9, 6 ],
            look_at  : [ 5, 5, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Group id="material_group"></Group>
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 6, 4, 3 ],
            color    : [ 1, 1, 1 ]
          }
        </Light>
        <Light>
          {
          position : [ 6, 7, 6 ],
          color    : [ .1, .1, 0 ]
          }
        </Light>        
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="sphere_group">
        </Group>
      
