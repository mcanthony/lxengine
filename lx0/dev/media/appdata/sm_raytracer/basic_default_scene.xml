<Document>
    <Library>
      <IncludeDocument src="media2/appshared/materials/basic.xml" />
        <Camera id="camera">
        {
            position : [ 1.25, 1.25, 1.25 ],
            look_at  : [ .6, .6, 0 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Material2 id="white">
        {
        graph : {
        _type : "phong",
        diffuse : [ .75, .5, .5 ],
        specular : [ 1, 1, .5 ],
        specularEx : 512
        }
        }
      </Material2>
      <Material2 id="checker">
        {
          graph : {
            _type : "phong",
            diffuse : {
              _type : "checker",
              uv : {
                _type : "spherical",
                scale : [ 8, 8 ],
              },
            },
            specular : [ 2, 1.7, 0 ],
            specularEx : 512
          }
        }
      </Material2>      
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 3, 2, 3 ],
            color    : [ 1, .9, .9 ]
          }
        </Light>
        <Light>
          {
          position : [ 1.1, 2, .1 ],
          color    : [ 0, 0, .5 ]
          }
        </Light>
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane" material="red">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane" material="green">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane" material="blue">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="sphere_group">
            <Sphere material="white">
            {
                center : [ .5, .5, .5 ],
                radius : .5
            }
            </Sphere>
          <Sphere material="red">
              {
              center : [ 1.25, .25, .25 ],
              radius : .25
              }
          </Sphere>
          <Sphere material="green">
            {
            center : [ 1.25, .75, .25 ],
            radius : .25
            }
          </Sphere>

          <Sphere>
            {
            center : [ 0.25, 1.25, .25 ],
            radius : .25
            }
          </Sphere>

          <Sphere material="checker">
            {
            center : [ 0.75, 1.25, .25 ],
            radius : .25
            }
          </Sphere>

          <Sphere material="blue">
            {
            center : [ 1.25, 1.25, .25 ],
            radius : .25
            }
          </Sphere>

        </Group>
    </Scene>
</Document>
