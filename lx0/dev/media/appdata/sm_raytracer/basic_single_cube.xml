<Document>
    <Library>
        <Camera id="camera">
        {
            position : [ .5, 1.75, 1.25 ],
            look_at  : [ .5, .5, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Material id="white">
        {
        diffuse : [ 1, 1, 1 ],
        specular : [ 1, 1, 1 ],
        specular_n : 96
        }
      </Material>
      <Material id="red">
        {
        diffuse : [ 1, 0, 0],
        }
      </Material>
      <Material id="green">
        {
        diffuse : [ 0, 1, 0]
        }
      </Material>
      <Material id="blue">
        {
        diffuse : [ 0, 0, 1]
        }
      </Material>      
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 2, 3, 4 ],
            color    : [ 1, 1, 1 ]
          }
        </Light>     
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane" material="red">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane" material="green">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane" material="blue">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="geometry">
          <Sphere>
            {
            center : [ .5, .5, .5],
            radius : .6
            }
          </Sphere>
          <Sphere>
            {
            center : [ 1.5, .5, .5],
            radius : .6
            }
          </Sphere>
          <Cube material="red">
            {
            scale : [ 1, .5, 1 ],
            center : [ 1.5, .5, .5 ]
            }
          </Cube>
          <Cube material="blue">
            {
            scale : [ .5, 1, 1 ],
            center : [ .5, .5, .5 ]
            }
          </Cube>
        </Group>
    </Scene>
</Document>
