<Document>
    <Library>
      <IncludeDocument src="media2/appdata/sm_raytracer/library_basic_materials.xml" />
        <Camera id="camera">
        {
            position : [ 1.1, 1.1, 1.1 ],
            look_at  : [ .5, .5, .5 ]
        }
        </Camera>
      <View id="view">
        {
            camera : "camera"
        }
      </View>
      <Material id="white">
        {
        diffuse : [ 1, 1, 1 ],
        specular : [ 1, 1, 1 ],
        specular_n : 96
        }
      </Material>      
    </Library>
    <Scene view="view">
      <Group id="light_group">
        <Light>
          {
            position : [ 2, 3, 4 ],
            color    : [ 1, 1, 1 ]
          }
        </Light>     
      </Group>
        <Group id="plane_group">
            <Plane id="x_axis_plane" material="red">
            {
                normal : [ 1, 0, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="y_axis_plane" material="green">
            {
                normal : [ 0, 1, 0 ],
                d      : 0
            }
            </Plane>
            <Plane id="z_axis_plane" material="blue">
            {
                normal : [ 0, 0, 1 ],
                d      : 0
            }
            </Plane>
        </Group>
        <Group id="geometry">
          <Cone>
            {
              base : [ .5, .5, 0 ],
              radius : .5,
              axis : [ 0, 0, 1 ]
            }
          </Cone>
        </Group>
    </Scene>
</Document>
